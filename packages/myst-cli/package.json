{
  "name": "myst-cli",
  "version": "0.1.31",
  "description": "Command line tools for MyST",
  "author": "Franklin Koch <franklin@curvenote.com>",
  "license": "MIT",
  "keywords": [
    "markdown",
    "latex",
    "writing-software",
    "scientific-visualization",
    "pdf-generation",
    "science-research"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/executablebooks/mystjs.git"
  },
  "bugs": {
    "url": "https://github.com/executablebooks/mystjs/issues"
  },
  "homepage": "https://github.com/executablebooks/mystjs",
  "bin": {
    "myst": "./dist/myst.cjs"
  },
  "scripts": {
    "clean": "rimraf dist",
    "copy:version": "echo \"const version = '\"$npm_package_version\"';\nexport default version;\" > src/version.ts",
    "unlink": "npm uninstall -g myst-cli",
    "link": "npm run unlink; npm link;",
    "dev": "npm run link && concurrently \"tsc -w --preserveWatchOutput -p .\" \"esbuild src/cli/index.ts --bundle --outfile=dist/myst.js --platform=node --external:fsevents --watch\"",
    "lint": "npm run copy:version; eslint \"src/**/*.ts\" -c .eslintrc.cjs",
    "lint:format": "npm run copy:version; prettier --check \"src/**/*.ts\"",
    "test": "npm run copy:version; npm run link; vitest run",
    "test:watch": "npm run copy:version; npm run link; vitest watch",
    "build:esm": "tsc --project ./tsconfig.json --module es2015 --outDir dist --declaration",
    "build:cli": "esbuild src/cli/index.ts --bundle --outfile=dist/myst.cjs --platform=node --external:fsevents",
    "build": "npm-run-all -l copy:version clean -p build:esm build:cli"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=6"
  },
  "dependencies": {
    "@jupyterlab/nbformat": "3.5.2",
    "@reduxjs/toolkit": "^1.7.2",
    "adm-zip": "^0.5.9",
    "chalk": "^5.2.0",
    "check-node-version": "^4.2.1",
    "chokidar": "^3.5.3",
    "citation-js-utils": "^0.0.15",
    "commander": "^10.0.1",
    "cors": "^2.8.5",
    "docx": "^7.5.0",
    "doi-utils": "^2.0.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "get-port": "^6.1.2",
    "inquirer": "^8.2.2",
    "intersphinx": "^1.0.2",
    "js-yaml": "^4.1.0",
    "jtex": "^0.1.15",
    "mdast": "^3.0.0",
    "mime-types": "^2.1.35",
    "myst-cli-utils": "^1.0.0",
    "myst-common": "^1.0.0",
    "myst-config": "^0.0.16",
    "myst-ext-card": "^0.0.7",
    "myst-ext-grid": "^0.0.7",
    "myst-ext-exercise": "^0.0.2",
    "myst-ext-proof": "^0.0.2",
    "myst-ext-reactive": "^0.0.7",
    "myst-ext-tabs": "^0.0.7",
    "myst-frontmatter": "^1.0.0",
    "myst-parser": "^0.0.32",
    "myst-spec": "^0.0.4",
    "myst-spec-ext": "^0.0.12",
    "myst-templates": "^0.1.18",
    "myst-to-docx": "^0.0.24",
    "myst-to-jats": "^0.0.30",
    "myst-to-tex": "^0.0.28",
    "myst-transforms": "^0.0.32",
    "nanoid": "^4.0.0",
    "nbtx": "^0.2.3",
    "node-fetch": "^3.3.1",
    "p-limit": "^3.1.0",
    "redux": "^4.2.0",
    "simple-validators": "^1.0.0",
    "strip-ansi": "^7.0.1",
    "tex-to-myst": "^0.0.28",
    "unified": "^10.1.2",
    "unist-util-filter": "^4.0.0",
    "unist-util-remove": "^3.1.0",
    "unist-util-select": "^4.0.3",
    "vfile": "^5.3.5",
    "which": "^3.0.1",
    "ws": "^8.9.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/mime-types": "^2.1.1",
    "@types/which": "^3.0.0",
    "@types/ws": "^8.5.5",
    "concurrently": "^8.2.0",
    "eslint-config-curvenote": "latest"
  }
}
