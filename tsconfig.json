{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["es2019"],
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "typeRoots": ["./types", "./node_modules/@types", "../../node_modules/@types"],
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": []
}
